:- module(test, [boom/1]).
:- use_module(input).
:- use_module(data).
:- use_module(event).
:- use_module(anim).
:- use_module(effect).
:- use_module(random).
:- use_module(sound).
:- use_module(bomb_commands).

test:began :- 
	bind(u, pressed, [_]>>(boom(5))),
	bind(j, pressed, [_]>>(spawn([throwable_bomb{charges:999, radius: 20, fuse: 0}], _))),
	bind(h, pressed, [_]>>(spawn([potion_of_healing{}], _))).
test:ended :- unbind(_, _, _).
boom(N) :-
	owner(O),
	location(O, l(FloorId, P)),
	effect(effect_def(explosion, N), l(FloorId, P), _).

	