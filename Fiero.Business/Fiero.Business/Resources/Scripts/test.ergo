:- module(test, []).
:- use_module(input).
:- use_module(data).
:- subscribe(action, [actor_moved]).

coolio :-
	position(@owner, FId, Po),
	shape(square, 5, Ps),
	P := Po + Ps,
	\+at(FId, P, actor{}),
	spawn([npc_rat{}], [R]),
	move(R, P).

test:began :- 
	bind(k, pressed, [_]>>coolio),
	bind(j, pressed, [_]>>(spawn([throwable_bomb{charges:999, radius: 20, fuse: 0}], _))),
	bind(h, pressed, [_]>>(spawn([potion_of_healing{}], _)))
	.
test:ended :- unbind(_, _, _).

action:actor_moved(_ { actor: @owner }) :- true.