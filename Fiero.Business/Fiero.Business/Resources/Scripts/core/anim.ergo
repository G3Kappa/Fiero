:- module(anim, []).
stick_to(Entity, Animations, Stop) :- 
	position(@owner, P),
	atom_concat(anim_id_, &Entity.info.name, Key),
	(data:Key get OldId -> anim:stop(OldId) ; true),
	anim:play(P, Animations, [Id]),
	data:Key set Id,
	Stop = []>>(
		(data:Key get OldId -> anim:stop(OldId) ; true)
	).